<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_holder">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="@dimen/card_height">
        <ImageView
            android:layout_width="@dimen/profile_pic_size"
            android:layout_height="@dimen/profile_pic_size"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:id="@+id/card_avatar"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/card_avatar"
            android:layout_toStartOf="@+id/card_status"
            android:orientation="vertical"
            android:paddingLeft="@dimen/appbar_padding_top"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_heading"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_item_2"
                android:textColor="@color/white"
                android:id="@+id/card_description" />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/check_box_holder_width"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/card_status"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>