<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="zechat.android.training.zemoso.zechat.fragments.EditProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/cardview_dark_background"
        android:backgroundTintMode="screen">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/appbar_padding_top"
            android:orientation="vertical">
            <EditText
                android:id="@+id/profile_edit_text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:inputType="text"
                android:text="@string/enter_desc" />
            <EditText
                android:id="@+id/profile_edit_text_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:inputType="text"
                android:text="@string/enter_status" />
            <Button
                android:id="@+id/profile_button_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/browse_images"/>
            <Button
                android:id="@+id/profile_button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/submit" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
